{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "src",
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "core-js",
      "jasmine"
    ]
  }
}
